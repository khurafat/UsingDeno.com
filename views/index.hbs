{{!-- {{> page/title }} --}}



    <section class="container px-5 pt-16 pb-24 mx-auto">
        <div class="flex flex-wrap -m-4">

            {{#each projects}}
            {{!-- {{>person person=.}} --}}

            <a href="/project/{{ this.fields.slug }}" class="md:w-1/2 p-4">
                <div class="border shadow-xl rounded-lg hover:shadow-2xl">
                      <img class="w-full border-b rounded-t-lg" src="{{ this.fields.images.[0].url }}" alt="{{ this.fields.title }}" style="max-height:420px;">
                      <div class="p-6">
                    <h2 class="text-lg text-gray-900 font-medium title-font mb-2">{{ this.fields.title }}</h2>
                    <p class="leading-relaxed text-base">{{ this.fields.description }}</p>


                        </div>
                </div>
            </a>
            {{/each}}

            <a
                href="https://airtable.com/embed/shrgcfDww9BzDnzxs?backgroundColor=red"
                data-mode="drawer_right"
                data-submit-close-delay="5"
                target="_blank"
                class="md:w-1/2 p-4 typeform-share">
                <div class="border shadow-xl rounded-lg hover:shadow-2xl">
                    <img class="w-full px-16 sm:px-32 bg-gray-100 border-b rounded-t-lg" src="/plus.png" alt="Add your deno application / project"
                        style="">
                    <div class="p-6">
                        <h2 class="text-lg text-gray-900 font-medium title-font mb-2">Add your Application</h2>
                        <p class="leading-relaxed text-base">We request everyone using Deno to submit your applications so the community can grow even further and understand how Deno is maturing.</p>


                    </div>
                </div>
            </a>

        </div>

    </section>
